<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.metaintellect.tina">
    <uses-sdk android:targetSdkVersion="17"
            android:minSdkVersion="8"/>
    <!-- android:icon="@drawable/icon" android:label="@string/app_name" -->
    <application android:label="@string/app_name" android:icon="@drawable/tina" android:name=".Tina">
        <activity android:name=".LoginActivity" android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:label="@string/NewInvoice" android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden">
            android:uiOptions=”splitActionBarWhenNarrow”
        </activity>
    </application>

    <!-- Permission - Internet Connect -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
